# ============================================
# ONTIX Universal Platform
# Environment Configuration
# ============================================

# ============================================
# Application Settings
# ============================================
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_RELOAD=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Neo4j Configuration
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-password-here
NEO4J_DATABASE=neo4j

# Vector Index Name
NEO4J_VECTOR_INDEX=ontix_global_concept_index

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_DEFAULT_MODEL=gpt-5-mini

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small

# Entity Extraction Prompt (optional - custom prompt file path)
# ENTITY_EXTRACTION_PROMPT_PATH=./prompts/my_custom_extraction.txt

# ============================================
# PostgreSQL Configuration (Chat Storage)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ontix_chat
POSTGRES_USER=ontix
POSTGRES_PASSWORD=your-postgres-password

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache TTL (seconds)
CACHE_TTL=3600

# ============================================
# Apify Configuration (Data Pipeline)
# ============================================
APIFY_TOKEN=your-apify-token-here

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Feature Flags
# ============================================
FEATURE_VECTOR_SEARCH=true
FEATURE_CACHE=true
FEATURE_ANALYTICS=true

# ============================================
# Security
# ============================================
JWT_SECRET=your-jwt-secret-change-this-in-production

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Environment (development, staging, production)
ENVIRONMENT=development
